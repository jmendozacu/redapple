<?php
/**
 * Product list toolbar
 *
 * @see Mage_Catalog_Block_Product_List_Toolbar
 */
?>


<?php if($this->getCollection()->getSize()): ?>
<div class="clearfix product-list-filters hidden-xs">





                <?php if( $this->isExpanded() ): ?>
                <?php if( $this->isEnabledViewSwitcher() ): ?>
                <?php $_modes = $this->getModes(); ?>
                <?php if($_modes && count($_modes)>1): ?>
                <div class="plf-group product-filter-view pull-left">
                    <label><?php echo $this->__('View as') ?>:</label>
                    <div class="product-filter-field">
                        <div class="clearfix">
                            <?php foreach ($this->getModes() as $_code=>$_label): ?>
                                    
                                    <?php if($this->isModeActive($_code)): ?>
                                         <a href="<?php echo $this->getModeUrl($_code) ?>" class="link-view-toggle <?php echo strtolower($_code); ?>"><span></span></a> 
                                    <?php else: ?>
                                        <a href="<?php echo $this->getModeUrl($_code) ?>" class="link-view-toggle active <?php echo strtolower($_code); ?>"><span></span></a>
                                    <?php endif; ?>
                        
                            <?php endforeach; ?>
                        </div> <!-- .clearfix -->
                    </div>
                </div> <!-- .product-filter-view -->
                <?php endif; ?>
                <?php endif; ?>
                


                <div class="plf-group product-filter-sort pull-right">
                    <label><?php echo $this->__('Sort By') ?></label>
                    <div class="product-filter-field" style="width:auto;">
                       
                                <select class="" onchange="setLocation(this.value)">
                                <?php foreach($this->getAvailableOrders() as $_key=>$_order): ?>
                                    <option value="<?php echo $this->getOrderUrl($_key, 'asc') ?>"<?php if($this->isOrderCurrent($_key)): ?> selected="selected"<?php endif; ?>>
                                        <?php echo $this->__($_order) ?>
                                    </option>
                                <?php endforeach; ?>
                                </select>

                        
                    </div>
                </div> <!-- .product-filter-sort -->


                <?php endif; ?> <!-- isExpanded -->

              




                <div class="plf-group product-filter-sort pull-right">
                    <label><?php echo $this->__('Show') ?></label>
                     <div class="product-filter-field" style="width:auto;">
                            <select onchange="setLocation(this.value)">
                            <?php foreach ($this->getAvailableLimit() as  $_key=>$_limit): ?>
                                <option value="<?php echo $this->getLimitUrl($_key) ?>"<?php if($this->isLimitCurrent($_key)): ?> selected="selected"<?php endif ?>>
                                    <?php echo $_limit ?>
                                </option>
                            <?php endforeach; ?>
                            </select> 
                            <label>
                            <?php echo $this->__('per page') ?></label>

                    </div>

                </div> <!-- .product-filter-show -->








</div>
<div class="clearfix product-pagination">

                <div class="product-pagination-text">

                    <?php if($this->getLastPageNum()>1): ?>
                        <?php echo $this->__('Items %s to %s of %s total', $this->getFirstNum(), $this->getLastNum(), $this->getTotalNum()) ?>
                    <?php else: ?>
                        There are <strong><?php echo $this->__('%s product(s)', $this->getTotalNum()) ?></strong>
                    <?php endif; ?>
                   

                </div>
                
                <?php echo $this->getPagerHtml() ?>

                

</div>
<?php endif ?>


